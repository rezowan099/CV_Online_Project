@model CV_Online.Models.EmploymentHistory

@{
    ViewBag.Title = "Create";
}


<h2>Add Employment History</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EmploymentHistory</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CompanyName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CompanyName)
            @Html.ValidationMessageFor(model => model.CompanyName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CompanyBusiness)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CompanyBusiness)
            @Html.ValidationMessageFor(model => model.CompanyBusiness)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CompanyLocation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CompanyLocation)
            @Html.ValidationMessageFor(model => model.CompanyLocation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Department)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Department)
            @Html.ValidationMessageFor(model => model.Department)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PositionHeld)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PositionHeld)
            @Html.ValidationMessageFor(model => model.PositionHeld)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Responsibilities)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Responsibilities)
            @Html.ValidationMessageFor(model => model.Responsibilities)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.From)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.From)
            @Html.ValidationMessageFor(model => model.From)
        </div>

        <div id="DivToDate">
            <div class="editor-label">
                @Html.LabelFor(model => model.To)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.To)
                @Html.ValidationMessageFor(model => model.To)
            </div>
        </div>
        <div>
            @Html.CheckBoxFor(model => model.IsContinue, new {id = "IsContinue"}) To Present
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Details")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/MvcFoolproof")

    <script type="text/javascript">
        $('#IsContinue').removeAttr('checked');
        $('#DivToDate').show();
        $('#IsContinue').change(function () {
            if (this.checked) {
                $('#DivToDate').hide();
                document.getElementById('To').value = document.getElementById('From').value;
            }
            else {
                $('#DivToDate').show();
                document.getElementById('To').value = null;
            }
        });
    </script>
}
