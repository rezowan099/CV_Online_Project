            @Html.LabelFor(model => model.FieldsOfSpecialization)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FieldsOfSpecialization)
            @Html.ValidationMessageFor(model => model.FieldsOfSpecialization)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExtracurricularActivities)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExtracurricularActivities)
