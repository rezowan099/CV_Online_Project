@model IEnumerable<CV_Online.Models.Education>

@{
    ViewBag.Title = "Index";
}

<h2>Educational Informaions</h2>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EducationLevel)  
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConcentrationMajorGroup)  
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Institution)  
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExamDegreeTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearOfPassing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Achievement)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EducationLevel.Level)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConcentrationMajorGroup.Type)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Institution.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExamDegreeTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Result)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Scale)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearOfPassing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Achievement)
        </td>    
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
